<odoo>
    <data>
        <template id="inherit_payment_form_for_moyasar_modal" inherit_id="payment.form">
            <xpath expr="//div[@id='o_payment_form_options']" position="after">
                <div class="modal fade payment_moyasar_modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" id="payment_moyasar_modal" 
                                            aria-labelledby="moyasar_title" aria-hidden="true" style="z-index:2000">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="moyasar_title">Moyasar Payment</h4>
                                <button id="moyasar_close" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mysr-form"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>